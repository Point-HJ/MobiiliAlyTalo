@model IEnumerable<MobiiliAlytalo.ViewModel.ValoViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Valaistus</h2>

<p>
    @Html.ActionLink("Lisää uusi valo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ValaisinNimi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValoONOFF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valo33)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valo66)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valo100)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValoAikaLeimaONOFF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValoAikaLeima33)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValoAikaLeima66)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValoAikaLeima100)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ValaisinNimi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValoONOFF)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Valo33)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Valo66)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Valo100)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValoAikaLeimaONOFF)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValoAikaLeima33)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValoAikaLeima66)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValoAikaLeima100)
        </td>

        <td>
            @Html.ActionLink("OFF", "ValoONOFF", new { id = item.ValoID })
            @Html.ActionLink("33%", "Valo33", new { id = item.ValoID })
            @Html.ActionLink("66%", "Valo66", new { id = item.ValoID })
            @Html.ActionLink("100%", "Valo100", new { id = item.ValoID })
            @Html.ActionLink("Edit", "Edit", new { id = item.ValoID })
            @Html.ActionLink("Delete", "Delete", new { id = item.ValoID })
        </td>
    </tr>
}

</table>
